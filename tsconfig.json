{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            //** Components **//
            "@commonComponents/*": ["./src/components/common/*"],
            "@moduleComponents/*": ["./src/components/modules/*"],
            //** TypeProps **//
            "@typeProps/*": ["./src/constants/typeProps/*"],
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/components/modules/MainLayout"
    ],
    "exclude": ["node_modules"]
}
